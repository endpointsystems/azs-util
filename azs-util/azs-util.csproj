<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <RootNamespace>azs_util</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Azure Storage Account Utility</Title>
        <Description>This utility application helps you do things with containers and table storage that az simply doesn't support, such as renaming Partition Keys or listing all containers by name. We'll add additional functionality as requested, so stay tuned!</Description>
        <Copyright>2020 Endpoint Systems. All rights reserved.</Copyright>
        <PackageLicenseUrl>https://github.com/endpointsystems/azs-utils/blob/main/LICENSE</PackageLicenseUrl>
        <PackageIconUrl>https://res.cloudinary.com/endpoint-systems/image/upload/v1580768327/ES_ico_nkoihx.png</PackageIconUrl>
        <RepositoryUrl>https://github.com/endpointsystems/azs-utils</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>azs-util</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <PackageTags>.NET Tool, Azure, Azure Storage, Azure Blob Storage, Azure Table Storage</PackageTags>
        <PackageProjectUrl>https://endpointsystems.com/blog/introducing-azs-util</PackageProjectUrl>
        <PackageVersion>1.0.2</PackageVersion>
        <PackageReleaseNotes>- added list-pk to table command, which lists all unique PartitionKeys in a table.
- Added list-rk to table commands, listing all RowKeys for a given PartitionKey.</PackageReleaseNotes>
        <TargetFramework>net5.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Azure.Data.Tables" Version="12.0.1" />
      <PackageReference Include="Azure.Storage.Blobs" Version="12.9.0" />
      <PackageReference Include="CsvHelper" Version="27.1.0" />
      <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="3.1.0" />
    </ItemGroup>

</Project>
